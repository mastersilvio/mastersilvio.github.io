---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => post.data.published && post.data.lang === "pt")
  .sort((a, b) => {
    const dateA = a.data.date ?? new Date(0);
    const dateB = b.data.date ?? new Date(0);
    return dateB.getTime() - dateA.getTime();
  });
---

<BaseLayout title="Sílvio Meireles" description="Blog pessoal de Sílvio Meireles" lang="pt">
  <section class="hero">
    <h1>Olá, sou Sílvio Meireles</h1>
    <p>
      Bacharel em Sistemas de Informação, apaixonado por Matemática, Programação e Machine Learning.
      Aqui compartilho pensamentos sobre tecnologia, vida e aprendizado contínuo.
    </p>
  </section>

  <section class="posts-section">
    <h2>Posts Recentes</h2>
    <div class="posts-list">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          slug={post.id}
          date={post.data.date}
          tags={post.data.tags}
          description={post.data.description}
        />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    margin-bottom: 3rem;
  }

  .hero h1 {
    margin-top: 0;
    font-size: 2rem;
  }

  .hero p {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    max-width: 600px;
  }

  .posts-section h2 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
    color: var(--color-text-secondary);
    font-weight: 600;
  }
</style>
