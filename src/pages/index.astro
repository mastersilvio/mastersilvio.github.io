---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PostCard from '@/components/PostCard.svelte';
import { getReadTime } from '@/lib/utils/readTime';
import { getPublishedPosts, getPostSlug } from '@/lib/utils/posts';
import { SITE } from '@/config';
import { Image } from 'astro:assets';
import profilePhoto from '@/site-assets/profile_photo.jpg';
import { getLangFlag } from '@/lib/utils/lang';
import { readFileSync } from 'fs';
import { join } from 'path';
import { parseMarkdown } from '@/lib/simple-markdown';
import I18nLabel from '@/components/I18nLabel.astro';

const posts = (await getPublishedPosts()).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredPosts = posts.filter((post) => post.data.featured).slice(0, SITE.featuredPostsCount);

const nonFeatured = posts.filter((post) => !post.data.featured);
const latestByLang = new Map<string, typeof nonFeatured>();
for (const post of nonFeatured) {
  const lang = post.data.lang || 'en';
  const arr = latestByLang.get(lang) || [];
  if (arr.length < SITE.latestPostsCount) {
    arr.push(post);
    latestByLang.set(lang, arr);
  }
}
const latestPostIds = new Set<string>();
const latestPosts: typeof nonFeatured = [];
for (const arr of latestByLang.values()) {
  for (const p of arr) {
    if (!latestPostIds.has(p.id)) {
      latestPostIds.add(p.id);
      latestPosts.push(p);
    }
  }
}
latestPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const projects = (await getCollection('projects'))
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, SITE.homeProjects.count);

const appearances = (await getCollection('appearances'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

function loadHero(lang: string) {
  try {
    const suffix = lang === 'pt' ? '' : `-${lang}`;
    const fullPath = join(process.cwd(), `site/hero${suffix}.md`);
    const markdown = readFileSync(fullPath, 'utf-8');
    return parseMarkdown(markdown.replace('{author}', SITE.author));
  } catch {
    return '';
  }
}

const heroPt = loadHero('pt');
const heroEn = loadHero('en');
const heroEs = loadHero('es');

const socialIcons: Record<string, string> = {
  github: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
  linkedin: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
  x: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-4.714-6.231-5.401 6.231H2.744l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  email: `<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`,
};
---

<Layout>
  <!-- 1. Hero Section -->
  <section
    class="flex flex-col-reverse md:flex-row items-center gap-8 sm:gap-12 lg:gap-16 mb-24 lg:mb-32"
  >
    <div class="flex-1 text-center md:text-left">
      <div class="hero-content" data-i18n="pt" set:html={heroPt} />
      <div class="hero-content" data-i18n="en" set:html={heroEn} />
      <div class="hero-content" data-i18n="es" set:html={heroEs} />
      <div class="flex flex-wrap justify-center md:justify-start gap-5 sm:gap-6 mt-2">
        {
          Object.entries(SITE.social).map(([platform, link]) => (
            <a
              href={link}
              aria-label={`${platform} profile`}
              class="text-muted-foreground hover:text-primary transition-colors no-underline"
            >
              <Fragment set:html={socialIcons[platform] ?? platform} />
            </a>
          ))
        }
      </div>
    </div>
    <div
      class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 3xl:w-72 3xl:h-72 rounded-2xl overflow-hidden border border-border shadow-xl shrink-0"
    >
      <Image
        src={profilePhoto}
        alt={SITE.author}
        width={400}
        height={400}
        widths={[200, 400, 800]}
        sizes="(max-width: 639px) 128px, (max-width: 1023px) 160px, 400px"
        class="w-full h-full object-cover transition-all duration-700 ease-out scale-105 hover:scale-100"
      />
    </div>
  </section>

  <div class="flex flex-col gap-24 lg:gap-32">
    <!-- 2. Featured Posts -->
    {
      featuredPosts.length > 0 && (
        <section data-posts-section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <I18nLabel k="featured" tag="h2" class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground" />
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70" />
            <a
              href="/posts"
              class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              <I18nLabel k="viewAllPosts" />
            </a>
          </div>
          <div class="grid gap-3 sm:gap-4">
            {featuredPosts.map((post) => (
              <PostCard {post} slug={getPostSlug(post)} readTime={getReadTime(post.body || '')} />
            ))}
          </div>
        </section>
      )
    }

    <!-- 3. Latest Posts -->
    <section data-posts-section>
      <div class="flex items-baseline justify-between mb-8 sm:mb-12">
        <I18nLabel k="latestPosts" tag="h2" class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground" />
        <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
        <a
          href="/posts"
          class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
        >
          <I18nLabel k="archive" />
        </a>
      </div>
      <div class="grid gap-3 sm:gap-4">
        {
          latestPosts.map((post) => (
            <PostCard {post} slug={getPostSlug(post)} readTime={getReadTime(post.body || '')} />
          ))
        }
      </div>
    </section>

    <!-- 4. Projects -->
    {
      SITE.homeProjects.enabled && projects.length > 0 && (
        <section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <I18nLabel k="projects" tag="h2" class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground" />
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70" />
            <a
              href="/projects"
              aria-label="View all projects"
              class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              <I18nLabel k="allProjects" />
            </a>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
            {projects.map((project) => {
              const isExternal = project.data.directLink;
              const projectUrl = isExternal ? project.data.link : `/projects/${project.id}`;
              const target = isExternal ? '_blank' : '_self';

              return (
                <article class="flex flex-col h-full p-6 rounded-2xl bg-secondary/30 border border-border/50 hover:bg-secondary/50 hover:border-border transition-all duration-300 group">
                  <div class="flex-1">
                    <a
                      href={projectUrl}
                      target={target}
                      rel={isExternal ? 'noopener noreferrer' : undefined}
                      class="no-underline"
                    >
                      <h3 class="text-lg sm:text-xl font-bold leading-tight mb-3 group-hover:text-primary transition-colors">
                        {project.data.title}
                      </h3>
                    </a>

                    {project.data.types && project.data.types.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 mb-3">
                        {project.data.types.map((type) => (
                          <span
                            class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wide ${
                              type === 'commercial'
                                ? 'bg-primary/10 text-primary border border-primary/20'
                                : type === 'open-source'
                                  ? 'bg-emerald-500/10 text-emerald-700 dark:text-emerald-300 border border-emerald-500/20'
                                  : 'bg-indigo-500/10 text-indigo-700 dark:text-indigo-300 border border-indigo-500/20'
                            }`}
                          >
                            {type}
                          </span>
                        ))}
                      </div>
                    )}

                    <p class="text-sm text-muted-foreground leading-relaxed mb-4">
                      {project.data.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-4">
                      {project.data.tags.slice(0, 3).map((tag) => (
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-background border border-border text-muted-foreground">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>

                  <div class="flex items-center gap-3 pt-4 border-t border-border/50">
                    <a
                      href={projectUrl}
                      target={target}
                      rel={isExternal ? 'noopener noreferrer' : undefined}
                      class="inline-flex items-center gap-2 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
                    >
                      {isExternal ? <I18nLabel k="visitSite" /> : <I18nLabel k="viewDetails" />}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <>
                          <path d="M7 7h10v10" />
                          <path d="M7 17 17 7" />
                        </>
                      </svg>
                    </a>

                    {project.data.github && (
                      <a
                        href={project.data.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="ml-auto inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors no-underline"
                        aria-label={`GitHub repository for ${project.data.title}`}
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                          <path d="M9 18c-4.51 2-5-2-7-2" />
                        </svg>
                        GitHub
                      </a>
                    )}
                  </div>
                </article>
              );
            })}
          </div>
        </section>
      )
    }

    <!-- 5. Talks / Appearances -->
    {
      appearances.length > 0 && (
        <section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <I18nLabel k="talksAppearances" tag="h2" class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground" />
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
            <a
              href="/appearances"
              class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              <I18nLabel k="viewAppearances" />
            </a>
          </div>
          <div class="space-y-4 sm:space-y-6">
            {
              appearances.map((item) => (
                <a
                  href={item.data.link}
                  class="flex items-center justify-between py-3 group no-underline transition-all hover:translate-x-1"
                >
                  <div class="flex flex-col">
                    <span class="text-xs font-bold uppercase tracking-widest text-muted-foreground mb-1">
                      {item.data.event}
                    </span>
                    <span class="font-bold text-sm sm:text-base text-foreground group-hover:text-primary transition-colors leading-tight">
                      {item.data.title}
                    </span>
                  </div>
                  <div class="flex items-center gap-4">
                    {item.data.lang && item.data.lang !== 'pt' && (
                      <span
                        class="inline-flex items-center gap-1.5 px-1.5 py-0.5 rounded bg-secondary/50 text-[10px] font-bold uppercase tracking-tighter text-muted-foreground group-hover:text-foreground transition-colors cursor-help"
                        title={`Language: ${item.data.lang}`}
                      >
                        <span class="text-sm leading-none group-hover:scale-110 transition-transform">
                          {getLangFlag(item.data.lang)}
                        </span>
                        {item.data.lang}
                      </span>
                    )}
                    <span class="text-xs font-medium text-muted-foreground tabular-nums">
                      {item.data.date.getFullYear()}
                    </span>
                  </div>
                </a>
              ))
            }
          </div>
        </section>
      )
    }
  </div>
</Layout>

<style>
  .hero-content :global(h1) {
    font-size: 1.875rem; /* text-3xl */
    line-height: 1.1;
    font-weight: 900; /* font-black */
    letter-spacing: -0.025em; /* tracking-tight */
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-foreground);
  }

  @media (min-width: 640px) {
    .hero-content :global(h1) {
      font-size: 2.25rem; /* sm:text-4xl */
    }
  }

  @media (min-width: 1024px) {
    .hero-content :global(h1) {
      font-size: 3rem; /* lg:text-5xl */
    }
  }

  @media (min-width: 1920px) {
    .hero-content :global(h1) {
      font-size: 3.75rem; /* 3xl:text-6xl */
    }
  }

  .hero-content :global(a) {
    color: #e00000;
    text-decoration: underline;
  }

  .hero-content :global(p) {
    font-size: 1rem; /* text-base */
    line-height: 1.625; /* leading-relaxed */
    color: var(--color-muted-foreground);
    margin-bottom: 2rem; /* mb-8 */
    max-width: 42rem; /* max-w-2xl */
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 640px) {
    .hero-content :global(p) {
      font-size: 1.125rem; /* sm:text-lg */
    }
  }

  @media (min-width: 768px) {
    .hero-content :global(p) {
      margin-left: 0;
      margin-right: 0;
    }
  }

  @media (min-width: 1024px) {
    .hero-content :global(p) {
      font-size: 1.25rem; /* lg:text-xl */
    }
  }
</style>
