---
import FormattedDate from "./FormattedDate.astro";
import TagList from "./TagList.astro";

interface Props {
  title: string;
  slug: string;
  date?: Date;
  tags?: string[];
  description?: string;
}

const { title, slug, date, tags = [], description = "" } = Astro.props;
---

<article class="post-card">
  <a href={`/${slug}/`}>
    <h3>{title}</h3>
  </a>
  <div class="post-card-meta">
    {date && <FormattedDate date={date} />}
    {tags.length > 0 && <TagList tags={tags} />}
  </div>
  {description && <p class="post-card-desc">{description}</p>}
</article>

<style>
  .post-card {
    padding: 1.25rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-card a {
    text-decoration: none;
  }

  .post-card h3 {
    margin: 0;
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--color-text);
    transition: color 0.2s;
  }

  .post-card a:hover h3 {
    color: var(--color-accent);
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-top: 0.4rem;
    color: var(--color-text-secondary);
    font-size: 0.85rem;
  }

  .post-card-desc {
    margin-top: 0.5rem;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
  }
</style>
