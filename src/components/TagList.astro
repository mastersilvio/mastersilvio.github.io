---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
  {tags.map((tag) => (
    <span class="tag">{tag}</span>
  ))}
</div>

<style>
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    padding: 0.15rem 0.6rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
  }
</style>
